#ifndef NLDBTREE_H_
#define NLDBTREE_H_



template<int key_size, int value_size, int keys_per_node> class nldb_tree {
	class node;

	node * child_;
	class node {
	};

	class internal_key
	{
		char key_   [key_size];
		// The child node which has keys greater than the given key.
		node * right_child_;
	};

	class internal_node
	{
		// The child node which has keys less than than the first key.
		node * left_child_;
	};


	class key_value {
		char key_   [key_size];
		char value_ [value_size];
	};

	class leaf node {
		// The indirect index
		int sorted_key_index[keys_per_node];

		// The key-value pair.
		key_value kv_[keys_per_node];
		// The parent node.
		node * parent_;
		// The next sibling node
		node * next_;
		// The previous sibling
		node * prev_;
	};

public:
	nldb_tree();
	virtual ~nldb_tree();


};

#endif /* NLDBTREE_H_ */
