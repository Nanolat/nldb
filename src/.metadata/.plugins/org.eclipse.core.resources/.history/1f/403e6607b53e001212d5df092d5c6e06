#ifndef NLDBTREE_H_
#define NLDBTREE_H_



template<int key_size, int keys_per_node> class nldb_tree {
	class node {
	};

	class key
	{
		char key_   [key_size];
	};


	class internal_node : public node
	{
		// The number of keys in this node.
		int    key_count_;

		// The sorted keys
		key    keys_[keys_per_node];
		// The children for keys.
		node * right_children_[keys_per_node];

		// The child node which has keys less than than the first key.
		node * left_child_;
	};


	class leaf node : public node
	{
		// The number of keys in this node.
		int    key_count_;
		// The sorted keys.
		key    keys_[keys_per_node];
		// The value for each sorted keys.
		void * values_[keys_per_node];
		// The parent node.
		node * parent_;
		// The next sibling node
		node * next_;
		// The previous sibling
		node * prev_;
	};

public:
	nldb_tree();
	virtual ~nldb_tree();
	int put (void * key, int key_len, void * value, int value_len)
	{

	}
	int get (void * key, int key_len, void * value, int value_len )
	{

	}
	int del (void * key, int key_len)
	{

	}
	int search_forward(void * key, int key_len)
	{

	}

	int search_backward(void * key, int key_len)
};

#endif /* NLDBTREE_H_ */
