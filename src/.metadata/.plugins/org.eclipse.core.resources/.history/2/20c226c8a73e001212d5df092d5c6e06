#ifndef NLDBTREE_H_
#define NLDBTREE_H_



template<int key_size, int value_size, int keys_per_node> class nldb_tree {
	class key_value {
		char key_   [key_size];
		char value_ [value_size];
	};

	class node {
		char      min_key_ [key_size];
		// The key-value pair.
		key_value kv_[keys_per_node];
		node * parent_;
		// The next sibling node which has greater key
		node * next_;
		// The parent node which has greater key
	};

public:
	nldb_tree();
	virtual ~nldb_tree();


};

#endif /* NLDBTREE_H_ */
