#include <katt/interface.h>

#ifndef KATT_TEST_LONG_EVENT_H_ // NOLINT
#define KATT_TEST_LONG_EVENT_H_ // NOLINT


class LongEvent {
 public:
    LongEvent(const int64_t& value = 0) : value_(value) {}

    int64_t value() const { return value_; }

    void set_value(const int64_t& value) { value_ = value; }

 private:
    int64_t value_;
};

class LongEventFactory : public disruptor::EventFactoryInterface<LongEvent> {
 public:
	virtual ~LongEventFactory() {};

    virtual LongEvent* NewInstance(const int& size) const {
        return new LongEvent[size];
    }
};


#endif // KATT_TEST_LONG_EVENT_H_ NOLINT
